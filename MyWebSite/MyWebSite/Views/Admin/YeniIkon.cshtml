
@model MyWebSite.Models.Siniflar.İkonlar

@{
    ViewBag.Title = "YeniIkon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ikon Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.İkon)
    @Html.TextAreaFor(x => x.İkon, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Link)
    @Html.TextAreaFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Renk)
    @Html.TextAreaFor(x => x.Renk, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">İkon Ekle</button>
</form>

